<h1>Node $name</h1>

<div>
    <div class="alert alert-$helper.map($node.status)">Global status ($!node.date): $node.status</div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
            #foreach ($result in $node.results)
            <tr class="$helper.map($result.status)">
                <td>$result.name</td>
                <td>$result.message</td>
                <td>$result.status</td>
            </tr>
            #end
        </tbody>
    </table>
</div>
